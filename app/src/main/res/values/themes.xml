<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Overflow" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Overflow" parent="Base.Theme.Overflow" />

    <!-- Text par default -->
    <style name="default_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/sono_regular</item>
    </style>

    <!-- Text Item title -->
    <style name="item_title_text_style" parent="default_text_style">
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textSize">17dp</item>
    </style>

    <!-- Text Item description -->
    <style name="item_description_text_style" parent="default_text_style">
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>

    <!-- app title -->
    <style name="app_title_text_style" >
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/rubik_glitch_regular</item>
    </style>

    <!-- Heure et meteo -->
    <style name="time_weather_text_style">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/sono_bold</item>
    </style>
</resources>